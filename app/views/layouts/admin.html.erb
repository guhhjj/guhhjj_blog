<!DOCTYPE html>
<html>
<head>
	<title>Admin console</title>
	<%= stylesheet_link_tag    "application", :media =>"all" %>
	<%= javascript_include_tag "application" %>
	<%= csrf_meta_tags %>
	<style type="text/css">
     body {
		color: #666;
		padding-top: 60px;
		background: url('http://static.duoshuo.com/images/tile-light.png');
		font-family: "Helvetica Neue", Helvetica, STHeiTi, "Microsoft YaHei", Arial, sans-serif;
	}
    </style>
</head>
<body >

	<div class="container">
		<div class="row">
			<div class="span3">
				<ul class="nav nav-pills nav-stacked admin-menu">
					<li>
						<%= link_to 'blogs', blogs_path(:flag =>"1"),:class=>'btn-info'%></li>
					<li>
						<%= link_to 'categories', categories_path(:flag =>"1"),:class=>'btn-info'%></li>
					<li>
						<%= link_to 'Logout', logout_path, method: :delete,:class=>'btn-info'%></li>
				</ul>
			</div>
			<div class="span9"><%= yield %></div>
		</div>
	</div>

</body>

</html>